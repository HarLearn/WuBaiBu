/*整个home页面*/
.home{
  width: 750rpx;
  height: 100%;
}
/*搜索栏*/
.locationBlock{
  width: 690rpx;
  height:127rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 0rpx;
  background: #FAFAFA;
  box-shadow: 0px 8px 8px rgba(0, 0, 0, 0.24), 0px 0px 8px rgba(0, 0, 0, 0.12);
  /* border: 1px solid #44b549; */
}
.locationContent{
  padding-top: 8rpx;
  display: flex;
  flex-direction: column;
}
.userLocation{
  width: 300rpx;
  /* border: 1px solid #e65907; */
}
.user-tag{
  margin-right: 8rpx;
  margin-left: 8rpx;
  /* border: 1px solid #4381dd; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position:center;
}

/*设置整个块的显示*/
.interactiveBlock{
  width: 690rpx;
  height: 226rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
  background: #FAFAFA;
  box-shadow: 0px 8px 8px rgba(0, 0, 0, 0.24), 0px 0px 8px rgba(0, 0, 0, 0.12);
}
.block-content{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 16rpx;
}
.content-block{
  width: 640rpx;
  /* border: 1px solid #131000; */
}
.img{
  background: #9D9D9D;
}
 .title-content{
  width: 640rpx;
  /* border: 1px solid #e70941; */
 }
/*对组件分到两端*/
.split-content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position:center;
  /* border: 1px solid #16e053; */
}

/*块中标题的显示样式*/
.title{
  width: 490rpx;
  height: 48rpx;

  font-family: Roboto;
  font-style: normal;
  font-weight: normal;
  line-height: 40rpx;
  font-size: 32rpx;

  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

  color: rgba(0, 0, 0, 0.87);
  /* border: 1px solid #e20909; */
}

/*块中的显示内容样式*/
.detail{
  width: 636rpx;
  height: 86rpx;

  font-family: Roboto;
  font-style: normal;
  font-weight: normal;
  line-height: 40rpx;
  font-size: 28rpx;

  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

  color: rgba(0, 0, 0, 0.543846);
  /* border: 1px solid #f106be; */
}
/*块中分割线样式
border: 1rpx solid rgba(0, 0, 0, 0.12);
*/
.line{
  width: 640rpx;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.12);
  
}
/*块中文本的描述*/
.text-content{
  width: 246rpx;
  height: 32rpx;

  margin-top: 4rpx;

  font-family: Roboto;
  font-style: normal;
  font-weight: 500;
  line-height: 32rpx;
  font-size: 26rpx;
  letter-spacing: 0.0384615em;

  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

  color: rgba(0, 0, 0, 0.54);
  /* border: 1px solid #fcd603; */
}
/*地址栏的大小*/
.address{
  width: 640rpx;
  height: 48rpx;
}

.address-content{
  display: flex;
  flex-direction: row;
}

/*添加跳转设置*/
.jump{
 height:96rpx;
 width:96rpx;
 border-radius:50%; 
 position:fixed;
 margin-left:630rpx;
 top:1000rpx;
 size:96rpx;
 background-color: #4381dd;
}
/* 添加标志居中 */
.midicon{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

 /* 下面是弹窗的所有 CSS */
 .mask{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.4);
  z-index: 9999;
}

.modal-content{
  display: flex;
  flex-direction: column;
  width: 90%;
  /* height: 80%; */
  background-color: #fff;
  border-radius: 10rpx;
}

.modal-btn-wrapper{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid rgba(7,17,27,0.1);
}

.cancel-btn, .confirm-btn{
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.cancel-btn{
  border-right: 2rpx solid rgba(7,17,27,0.1);
}

.main-content{
  flex: 1;
  height: 100%;
  overflow-y: hidden; 
}
